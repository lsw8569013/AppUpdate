<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_bg"
            />



        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_below="@+id/iv_top"
            android:id="@+id/rv_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/update_title"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:visibility="gone"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/updatecontent"
                android:textColor="#666"
                android:textSize="12sp"
                android:layout_below="@+id/tv_title"
                />

            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/tv_msg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_msg"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/version_dialog_next"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_lswupdate"
                    android:text="下次再说"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/tv_msg"
                    android:padding="6dp"
                    android:visibility="visible"
                    />

                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/version_dialog_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner"
                    android:text="升级"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/tv_msg"
                    android:padding="6dp"
                    android:layout_toRightOf="@+id/version_dialog_next"
                    />

            </LinearLayout>


            <lsw.update.FlikerProgressBar
                android:id="@+id/flikerbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:textSize="12sp"
                app:loadingColor="#40c4ff"
                app:stopColor="#1ff297"
                app:radius="8dp"
                android:visibility="gone"
                android:layout_below="@+id/ll_buttons"
                />

        </RelativeLayout>



</RelativeLayout>